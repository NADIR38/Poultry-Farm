@model Poultary.BL.Models.mortality

@{
    // ViewData["Title"] = "Add New Chick Batch";
}

<div class="container mt-4">
    <h2 class="text-success">➕ Add New Chick Batch</h2>

    <form asp-action="Create" class="mt-4">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="batchName" class="form-label">Batch Name</label>
                <div class="input-group">
                    <input asp-for="batchName" class="form-control" id="Batch-input" autocomplete="off" />
                    <a asp-controller="ChickBatches" asp-action="Create" class="btn btn-outline-success" title="Batch Name">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
                <span asp-validation-for="batchName" class="text-danger"></span>
            </div>


            <div class="col-md-6">
                <label asp-for="date" class="form-label">Date</label>
                <input asp-for="date" type="date" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="count" class="form-label"></label>
                <input asp-for="count" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="reason" class="form-label"></label>
                <input asp-for="reason" class="form-control" />
            </div>
          
        </div>




        <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
        </div>

    </form>
</div>
@section Scripts {
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <link href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" rel="stylesheet" />

    <script>
        $(function () {
            var $input = $("#Batch-input");

            $input.autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("SearchBatches", "Mortality")',
                        data: { term: request.term },
                        success: function (data) {
                            response(data);
                        }
                    });
                },
                minLength: 0
            }).focus(function () {
                $(this).autocomplete("search", $(this).val());
            });
        });
    </script>
}

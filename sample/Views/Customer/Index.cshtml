@model List<sample.Models.Customers>
@{
    ViewData["Title"] = "👥 Manage Customers";
    var search = Context.Request.Query["search"].ToString();
    Layout = "_Layout";
}

<div class="container mt-4">

    <form asp-action="Index" method="get" class="form-inline mb-3">
        <input name="search" value="@search" placeholder="Search by name" class="form-control mr-2" />
        <button type="submit" class="btn btn-primary mr-2"><i class="fas fa-search"></i> Search</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-sync"></i> Refresh</a>
    </form>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive table-scroll">
                <table class="table table-bordered table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr onclick="selectRow('@c.CustomerId','@c.Name','@c.Contact','@c.Address')" style="cursor:pointer;">
                                <td>@c.Name</td>
                                <td>@c.Contact</td>
                                <td>@c.Address</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-success text-white">
            <strong>➕ Add Customer</strong>
        </div>
        <div class="card-body">
            <form asp-action="Add" method="post" class="row g-3">
                <input type="hidden" name="CustomerId" id="Id" />
                <div class="col-md-4">
                    <input name="Name" id="Name" class="form-control" placeholder="Name" required />
                </div>
                <div class="col-md-4">
                    <input name="Contact" id="Contact" class="form-control" placeholder="Contact" required />
                </div>
                <div class="col-md-4">
                    <input name="Address" id="Address" class="form-control" placeholder="Address" required />
                </div>
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-success mt-2"><i class="fas fa-plus-circle"></i> Add</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-3 shadow-sm">
        <div class="card-header bg-primary text-white">
            <strong>✏️ Update Customer</strong>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post" class="row g-3">
                <input type="hidden" name="CustomerId" id="Id2" />
                <div class="col-md-4">
                    <input name="Name" id="Name2" class="form-control" placeholder="Name" required />
                </div>
                <div class="col-md-4">
                    <input name="Contact" id="Contact2" class="form-control" placeholder="Contact" required />
                </div>
                <div class="col-md-4">
                    <input name="Address" id="Address2" class="form-control" placeholder="Address" required />
                </div>
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-save"></i> Update</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this customer?');">
            <input name="id" id="DeleteId" type="hidden" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function selectRow(id, name, contact, address) {
            $('#Id2').val(id);
            $('#Name2').val(name);
            $('#Contact2').val(contact);
            $('#Address2').val(address);

            $('#DeleteId').val(id);
        }
    </script>
}
